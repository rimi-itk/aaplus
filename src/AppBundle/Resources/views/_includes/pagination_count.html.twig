{% if pagination is defined %}
  {% set start_number = (pagination.getCurrentPageNumber - 1) * pagination.getItemNumberPerPage + 1 %}
  {% if start_number > pagination.getTotalItemCount %}
    {% set start_number = pagination.getTotalItemCount %}
  {% endif %}

  {% set end_number = pagination.getCurrentPageNumber * pagination.getItemNumberPerPage %}
  {% if end_number > pagination.getTotalItemCount %}
    {% set end_number = pagination.getTotalItemCount %}
  {% endif %}

  {{ 'common.showing'|trans }}: {{ start_number }} - {{ end_number }} / {{ pagination.getTotalItemCount }}

{% else %}
  Error: pagination not defined!
{% endif %}
