{% extends 'AppBundle:Form:aaplus-bootstrap.html.twig' %}

{% block form_rows %}
  {% set row_number = 0 %}
  {% spaceless %}
    {% for child in form %}

      {% set child_attr = {} %}
      {% if attr.col_size is defined %}
        {% set child_attr = child_attr|merge({ 'col_size': attr.col_size }) %}
      {% endif %}
      {% if attr.widget_col is defined %}
        {% set child_attr = child_attr|merge({ 'widget_col': attr.widget_col }) %}
      {% endif %}
      {% if attr.label_col is defined %}
        {% set child_attr = child_attr|merge({ 'label_col': attr.label_col }) %}
      {% endif %}
      {% if attr.simple_col is defined %}
        {% set child_attr = child_attr|merge({ 'simple_col': attr.simple_col }) %}
      {% endif %}
      {% if attr.style is defined %}
        {% set child_attr = child_attr|merge({ 'style': attr.style }) %}
      {% endif %}
      {% set child_attr = child_attr|merge({ 'row_number': row_number }) %}
      {{ form_row(child, child_attr, row_number) }}


      {% if row_number == 0 %}
        {% set row_number = 1 %}
      {% else %}
        {% set row_number = 0 %}
      {% endif %}
    {% endfor %}
  {% endspaceless %}
{% endblock form_rows %}


{% block form_row %}
  {% if row_number == 0 %}
    <div class="row">
  {% endif %}
  <div class="col-md-6">
    {{ parent() }}
  </div>
  {% if row_number == 1 %}
    </div>
  {% endif %}
{% endblock form_row %}

{% block checkbox_row %}
  {% if row_number is not defined %}
    {{ parent() }}
  {% else %}
    {% if row_number == 0 %}
      <div class="row">
    {% endif %}
    <div class="col-md-6">
      {{ parent() }}
    </div>
    {% if row_number == 1 %}
      </div>
    {% endif %}
  {% endif %}
{% endblock checkbox_row %}

{% block button_row %}
  {% spaceless %}
  {% if row_number == 1 %}
    </div>
  {% endif %}
  <div class="row"><div class="col-md-12 text-right"><div class="form-group">
      {{ form_widget(form) }}
  </div></div></div>
  {% endspaceless %}
{% endblock button_row %}
