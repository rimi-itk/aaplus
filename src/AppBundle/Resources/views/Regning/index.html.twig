{% extends 'AppBundle::base.html.twig' %}

{% block body -%}
    <h1>Regning list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nummer</th>
                <th>Faktureret</th>
                <th>Startdato</th>
                <th>Slutdato</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('regning_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nummer }}</td>
                <td>{{ entity.faktureret }}</td>
                <td>{% if entity.startdato %}{{ entity.startdato|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.slutdato %}{{ entity.slutdato|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('regning_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('regning_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('regning_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
